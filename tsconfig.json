/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "compilerOptions": {
    "target":"es2019",                         
    "module": "commonjs",  
    "moduleResolution": "node",
    "rootDir":"src",
    "typeRoots":[
      "./src/@types",
      "./node_modules/@types"
    ],  
    "outDir":"./dist",
    "removeComments":true,
    "skipLibCheck": true,                     
    "strict": true,                              
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true      
  }
}
